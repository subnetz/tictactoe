<Window x:Class="tictactoe.Choose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tictactoe"
        mc:Ignorable="d"
        Title="Choose" Height="100" Width="300">
    <Grid Margin="20,10,0,0">
        <CheckBox>Play against Computer?</CheckBox>
        <CheckBox Margin="0,20,0,0">Wanna be O?</CheckBox>
        <CheckBox Margin="0,40,0,0">Wanna Start?</CheckBox>
        <Button Width="50" HorizontalAlignment="Right">OK</Button>
    </Grid>
</Window>
